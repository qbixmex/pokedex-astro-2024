---
import MainLayout from "@layouts/main-layout.astro";
import Heading from "@components/shared/heading.astro";
import { Divider } from "@root/src/components";
import Counter from "@components/Counter";
---

<MainLayout
  pageTitle="Favorite Pokemons"
  metaDescription="List of your favorite pokemons"
  metaRobots="noindex, nofollow"
>
  <div class="mainWrapper">
    <div class="flex justify-center items-center gap-4 mt-8">
      <Heading>Favorite Pokemons</Heading>
    </div>

    <Divider />

    <section id="content">
      <video
        controls
        autoplay={false}
        transition:persist="playing-video"
        style={{ width: "100%", marginBottom: "40px" }}
      >
        <source src="https://ia804502.us.archive.org/33/items/GoldenGa1939_3/GoldenGa1939_3_512kb.mp4" type="video/mp4">
      </video>

      <div class="bg-red-500/50 h-[1000px] mb-10"></div>

      <Counter
        client:visible
        transition:persist="counter"
        transition:persist-props
        initialValue={10}
      >Counter</Counter>
    </section>
  </div>
</MainLayout>

<style>
  .mainWrapper {
    @apply container mx-auto px-5 mb-10 lg:px-10;
  }
  #content {
    @apply w-full mx-auto md:max-w-[600px];
  }
</style>